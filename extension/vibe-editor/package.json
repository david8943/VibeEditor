{
  "name": "vibe-editor",
  "displayName": "vibeditor",
  "description": "add code snippet to notion",
  "publisher": "VibeEditor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibe-editor-viewer",
          "title": "vibe-editor-viewer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "vibe-editor-viewer": [
        {
          "id": "vibe-editor-viewer-page",
          "name": "login-page"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vibe-editor-viewer-page",
        "contents": "In order to use git features, you can open a folder containing a git repository or clone from a URL.\n[Google Login](command:vibe-editor.googleLogin)\n[Gihub Login](command:vibe-editor.githubLogin)\nTo learn more about how to use git and source control in VS Code [read our docs](https://aka.ms/vscode-scm).",
        "when": "true"
      }
    ],
    "commands": [
      {
        "command": "vibe-editor.googleLogin",
        "title": "googleLogin"
      },
      {
        "command": "vibe-editor.githubLogin",
        "title": "githubLogin"
      },
      {
        "command": "vibe-editor.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vibe-editor.copyCode",
        "title": "코드로 글 쓰기"
      },
      {
        "command": "vibe-editor.exportDirectoryTree",
        "title": "디렉토리 구조 내보내기"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vibe-editor.copyCode",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "vibe-editor.exportDirectoryTree",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}