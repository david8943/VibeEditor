{
  "name": "vibe-editor",
  "displayName": "vibeditor",
  "description": "add code snippet to notion",
  "publisher": "VibeEditor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibe-editor-viewer",
          "title": "vibe-editor-viewer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "vibe-editor-viewer": [
        {
          "id": "vibe-editor-viewer-page",
          "name": "login-page"
        },
        {
          "id": "vibe-editor-template-page",
          "name": "template-page"
        },
        {
          "id": "codeSnapshot",
          "name": "코드 스냅샷"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "vibe-editor-viewer-page",
        "contents": "Vibe Editor에 로그인이 필요합니다.\n[Google Login](command:vibe-editor.googleLogin)\n[GitHub Login](command:vibe-editor.githubLogin)",
        "when": "config:vibe-editor.loginStatus == false"
      },
      {
        "view": "vibe-editor-viewer-page",
        "contents": "Vibe Editor에 로그인되었습니다.",
        "when": "config:vibe-editor.loginStatus == true"
      },
      {
        "view": "vibe-editor-template-page",
        "contents": "노션 없어요 노션 값 입력해주세요",
        "when": "config:vibe-editor.loginStatus == true"
      },
      {
        "view": "codeSnapshot",
        "contents": "코드 스냅샷 기능입니다."
      }
    ],
    "commands": [
      {
        "command": "vibe-editor.googleLogin",
        "title": "Google 로그인",
        "category": "Vibe Editor"
      },
      {
        "command": "vibe-editor.githubLogin",
        "title": "GitHub 로그인",
        "category": "Vibe Editor"
      },
      {
        "command": "vibe-editor.copyCode",
        "title": "코드로 글 쓰기",
        "category": "Vibe Editor"
      },
      {
        "command": "vibe-editor.exportDirectoryTree",
        "title": "디렉토리 구조 내보내기",
        "category": "Vibe Editor"
      },
      {
        "command": "vibe-editor.captureSnapshot",
        "title": "📸 코드 스냅샷 촬영",
        "category": "Vibe Editor"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vibe-editor.copyCode",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "vibe-editor.captureSnapshot",
          "when": "editorHasSelection",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "command": "vibe-editor.exportDirectoryTree",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Vibe Editor",
      "properties": {
        "vibe-editor.loginStatus": {
          "type": "boolean",
          "default": false,
          "description": "로그인 상태"
        },
        "vibe-editor.notionToken": {
          "type": "string",
          "default": "",
          "description": "노션 API 토큰"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.25.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "^3.5.3",
    "redux-logger": "^3.0.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
